@model Minutas.Models.Departamento
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form>
    <h3>Crear Departamento</h3>
    <div>

        <label>Nombre</label>
        <input type="text" placeholder="Escribir..." required asp-for="Nombre"><br>
        <label>Jefe de Departamento</label>
        <input type="text" placeholder="Escribir..." required asp-for="IdJefe"><br>
        <label>Miembros</label>
        @foreach (var m in Model.Usuarios)
        {
          <select>
           
            <option>@m.Nombre</option>
           
        </select><br>  
        }
        

        <label>Estado</label>
        <select>
            <option>Activo</option>
            <option>Inactivo</option>
        </select><br>
        <a href="Departamentos.html"><input type="button" value="Confirmar"></a>
        <a href="Departamentos.html"><input type="button" value="Cancelar"></a>
    </div>
</form>